<div class="container my-4">
  <div class="row">
    <div class="col-sm-8 offset-sm-2 border pb-4">
      <div class="text-center mb-4 mt-4">
        <h3>アカウントを編集</h3>
      </div>

      <%= form_with(model: @account, local: true) do |f| %>
        <div class="row form-group">
          <div class='col-sm-4'>
            <%= f.label :mail_address, 'メールアドレス' %>
          </div>
          <div class='col-sm-8'>
            <%= f.email_field :mail_address, class: 'form-control' %>
          </div>
        </div>
        
        <div class="row form-group">
          <div class='col-sm-4'>
            <%= f.label :account_name, 'ニックネーム（表示名）' %>
          </div>
          <div class='col-sm-8'>
            <%= f.text_field :account_name, class: 'form-control' %>
          </div>
        </div>
        
        <div class="row form-group">
          <div class='col-sm-4'>
            <%= f.label :password, 'パスワード' %>
          </div>
          <div class='col-sm-8'>
            <%= f.password_field :password, class: 'form-control', placeholder: '8文字以上で英語と数字を各1文字以上入力' %>
          </div>
        </div>
        
        <div class="row form-group">
          <div class='col-sm-4'>
            <%= f.label :password_confirmation, 'パスワード（確認用）' %>
          </div>
          <div class='col-sm-8'>
            <%= f.password_field :password_confirmation, class: 'form-control' %>
          </div>
        </div>
        
        <div class="row form-group">
          <div class='col-sm-4'>
            <%= f.label :public_private, 'テイスティングノートを公開する' %>
          </div>
          <div class='col-sm-8'>
            <%= f.radio_button :public_private, 0, {checked: true} %> 公開
            <%= f.radio_button :public_private, 1, {} %> 非公開
          </div>
        </div>
        <%= hidden_field_tag :deleted_at, '0' %>
        <div class="text-center">
          <%= f.submit 'アカウント編集', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>