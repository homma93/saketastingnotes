<div class="container my-4">
  <div class="row">
    <div class="col-sm-8 offset-sm-2 border pb-4">
      <div class="text-center mb-4 mt-4">
        <h3>アカウントを登録</h3>
      </div>

      <%= form_with(model: @account, local: true) do |f| %>
        <div class="row form-group">
          <div class='col-sm-4'>
            <%= f.label :mail_address, 'メールアドレス' %>
          </div>
          <div class='col-sm-8'>
            <%= f.email_field :mail_address, class: 'form-control' %>
          </div>
        </div>
        
        <div class="row form-group">
          <div class='col-sm-4'>
            <%= f.label :account_name, 'ニックネーム（表示名）' %>
          </div>
          <div class='col-sm-8'>
            <%= f.text_field :account_name, class: 'form-control' %>
          </div>
        </div>
        
        <div class="row form-group">
          <div class='col-sm-4'>
            <%= f.label :birthday, '生年月日' %>
          </div>
          <div class='col-sm-8'>
            <%= f.date_select(:birthday,
              use_month_numbers: true,
              start_year: (Time.now.year - 100),
              end_year: (Time.now.year),
              default: Date.new(Time.now.year - 20, Time.now.month, Time.now.day), 
              date_separator: '/', 
            class: 'form-control') %>
          </div>
        </div>
        
        <div class="row form-group">
          <div class='col-sm-4'>
            <%= f.label :sex, '性別' %>
          </div>
          <div class='col-sm-8'>
            <%= f.radio_button :sex, 0, {} %> 男性
            <%= f.radio_button :sex, 1, {} %> 女性
            <%= f.radio_button :sex, 2, {} %> その他
          </div>
        </div>
        
        <div class="row form-group">
          <div class='col-sm-4'>
            <%= f.label :todofuken_id, '出身都道府県' %>
          </div>
          <div class='col-sm-8'>
            <%= f.select :todofuken_id, [['北海道　　　','1'],['青森','2'],['岩手','3'],['宮城','4'],['秋田','5'],['山形','6'],['福島','7'],['茨城','8'],['栃木','9'],['群馬','10'],
              ['埼玉','11'],['千葉','12'],['東京','13'],['神奈川','14'],['新潟','15'],['富山','16'],['石川','17'],['福井','18'],['山梨','19'],['長野','20'],
              ['岐阜','21'],['静岡','22'],['愛知','23'],['三重','24'],['滋賀','25'],['京都','26'],['大阪','27'],['兵庫','28'],['奈良','29'],['和歌山','30'],
              ['鳥取','31'],['島根','32'],['岡山','33'],['広島','34'],['山口','35'],['徳島','36'],['香川','37'],['愛媛','38'],['高知','39'],['福岡','40'],
              ['佐賀','41'],['長崎','42'],['熊本','43'],['大分','44'],['宮崎','45'],['鹿児島','46'],['沖縄','47']], class: 'form-control' %>
          </div>
        </div>

        <div class="row form-group">
          <div class='col-sm-4'>
            <%= f.label :password, 'パスワード' %>
          </div>
          <div class='col-sm-8'>
            <%= f.password_field :password, class: 'form-control', placeholder: '8文字以上で英語と数字を各1文字以上入力' %>
          </div>
        </div>
        
        <div class="row form-group">
          <div class='col-sm-4'>
            <%= f.label :password_confirmation, 'パスワード（確認用）' %>
          </div>
          <div class='col-sm-8'>
            <%= f.password_field :password_confirmation, class: 'form-control' %>
          </div>
        </div>
        
        <div class="row form-group">
          <div class='col-sm-4'>
            <%= f.label :public_private, 'テイスティングノートを公開する' %>
          </div>
          <div class='col-sm-8'>
            <%= f.radio_button :public_private, 0, {checked: true} %> 公開
            <%= f.radio_button :public_private, 1, {} %> 非公開
          </div>
        </div>
        <%= hidden_field_tag :deleted_at, '0' %>
        <div class="text-center">
          <%= f.submit 'アカウント登録', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>